  var $wrapperSlider = $('.news-slider-blog-inner')
      wrapperSlider = $wrapperSlider[0];

  $('.news-slider-blog-inner-info-slide').on('mousedown',function(){

      wrapperSlider.slick.setOption({
        swipe:false,
        draggable:false,
      })

  });


  $('.news-slider-blog-inner-info-slide').on('mouseup',function(){

      wrapperSlider.slick.setOption({
        swipe:true,
        draggable:true,
      })

  });
  




  $('.news-slider-blog-inner').slick({
    responsive: [
      {
        breakpoint: 375,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1,
          infinite: true,
          // autoplay: true,
          // autoplaySpeed: 3000,

        }
      },
      {
        breakpoint: 770,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1,
          infinite: true,
          // autoplay: true,
          // autoplaySpeed: 3000,
          dots:true,
        }
      },
