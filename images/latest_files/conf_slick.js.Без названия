$(".header-slider-inner").slick({
    autoplay: true,
    autoplaySpeed: 3000,
});

$('.about-slider').slick({
    responsive: [
      {
        breakpoint: 375,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1,
          infinite: true,
